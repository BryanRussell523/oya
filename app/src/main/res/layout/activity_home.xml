<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".homeActivity">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/fragmentcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tablayout"/>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        app:tabIndicatorHeight="0dp"
        app:tabIconTint="@color/blue"
        android:layout_alignParentBottom="true"
        app:tabTextColor="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white">
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chats"
            android:icon="@drawable/chat"
            android:id="@+id/chatstab">
        </com.google.android.material.tabs.TabItem>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/calls"
            android:text="Calls"
            android:textColor="@color/blue"
            android:id="@+id/callstab">
        </com.google.android.material.tabs.TabItem>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/wallets"
            android:text="Wallet"
            android:textColor="@color/blue"
            android:id="@+id/wallettab">
        </com.google.android.material.tabs.TabItem>
        <com.google.android.material.tabs.TabItem
            android:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/profilesettings"
            android:text="Settings"
            android:textColor="@color/blue"
            android:id="@+id/settingstab">
        </com.google.android.material.tabs.TabItem>
    </com.google.android.material.tabs.TabLayout>
    <ImageView
        android:visibility="gone"
        android:id="@+id/calculator"
        android:layout_toLeftOf="@id/cardView"
        android:layout_marginTop="660dp"
        app:cardElevation="4dp"
        android:background="@drawable/calculator"
        android:layout_marginRight="12dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/calendar"
        android:layout_centerInParent="true"
        android:layout_above="@id/cardView"
        android:background="@drawable/calendar"
        app:cardElevation="4dp"
        android:layout_marginBottom="15dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/notes"
        android:layout_toRightOf="@id/cardView"
        android:background="@drawable/notes"
        android:layout_marginTop="660dp"
        android:layout_marginLeft="12dp"
        app:cardElevation="4dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/tablayout"
        app:cardCornerRadius="40dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/transparent">
        <ImageView
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tools"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/textBelowFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="Tools"
        android:textColor="@color/grey"
        android:textSize="13sp" />
</RelativeLayout>