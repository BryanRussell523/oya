<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".SignUp">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="158dp"
        android:layout_height="127dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="128dp"
        android:src="@drawable/oyasmile" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="219dp"
        android:layout_height="55dp"
        android:layout_below="@+id/imageView4"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/signinbuttonback"
        android:fontFamily="@font/abeezee"
        android:padding="15dp"
        android:text="Welcome back!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="21dp" />

    <RelativeLayout
        android:id="@+id/signuppanel"
        android:layout_width="320dp"
        android:layout_height="450dp"
        android:layout_below="@+id/imageView4"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/loginpanel"
        android:elevation="50dp">

        <EditText
            android:id="@+id/email"
            android:layout_width="288dp"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/passwordtextboxbackground"
            android:drawableStart="@drawable/emailicon"
            android:elevation="10dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="135dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/passwordtextboxbackground"
            android:drawableStart="@drawable/passwordicon"
            android:elevation="10dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login"
            android:layout_width="134dp"
            android:layout_height="50dp"
            android:layout_below="@+id/password"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/passwordtextboxbackground"
            android:fontFamily="@font/abeezee"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/lightblue"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="2dp"
            android:fontFamily="@font/abeezee"
            android:text="Don't have an account?"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/registerbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/textView"
            android:fontFamily="@font/abeezee"
            android:text="Sign up here"
            android:textColor="@color/purple"
            android:textSize="15dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signuppanel"
        android:layout_centerInParent="true"
        android:fontFamily="@font/abeezee"
        android:text="Oyaonline"
        android:layout_marginTop="6dp"
        android:textColor="@color/lightblue"
        android:textSize="20sp" />
</RelativeLayout>