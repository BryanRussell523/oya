<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileActivity">
 <androidx.appcompat.widget.Toolbar
     app:layout_constraintLeft_toRightOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     android:id="@+id/toolbarofviewprofile"
     android:layout_width="match_parent"
     android:fitsSystemWindows="true"
     android:minHeight="?attr/actionBarSize"
     android:layout_height="wrap_content"
     android:background="@color/lightblue">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_gravity="center_vertical">
         <ImageButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/backbuttonofviewprofile"
             app:tint="@color/white"
             android:background="@android:color/transparent"
             android:src="@drawable/back"
             android:layout_centerVertical="true">
         </ImageButton>
         <TextView
             android:layout_centerVertical="true"
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@+id/backbuttonofviewprofile"
             android:id="@+id/myapptext"
             android:fontFamily="@font/abeezee"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Profile"
             android:textSize="20sp"
             android:textStyle="bold"
             android:textColor="@color/white"/>
     </RelativeLayout>
 </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        android:id="@+id/viewuserimage"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:cardCornerRadius="130dp"
        app:layout_constraintBottom_toBottomOf="@+id/profilepanel"
        app:layout_constraintEnd_toEndOf="@+id/profilepanel"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/profilepanel"
        app:layout_constraintTop_toTopOf="@+id/profilepanel"
        app:layout_constraintVertical_bias="0.136">
        <ImageView
            android:id="@+id/viewuserimageimageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/defaultprfilepic"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="229dp" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/profilepanel"
        android:layout_width="335dp"
        android:layout_height="407dp"
        android:scaleType="centerCrop"
        android:src="@drawable/userprofilepanel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarofviewprofile"></ImageView>

    <EditText
        android:id="@+id/viewusername"
        android:layout_width="224dp"
        android:layout_height="52dp"
        android:background="@drawable/textboxbackground"
        android:clickable="false"
        android:ems="10"
        android:enabled="false"
        android:inputType="text"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/profilepanel"
        app:layout_constraintEnd_toEndOf="@+id/profilepanel"
        app:layout_constraintHorizontal_bias="0.792"
        app:layout_constraintStart_toStartOf="@+id/profilepanel"
        app:layout_constraintTop_toBottomOf="@+id/viewuserimage"
        app:layout_constraintVertical_bias="0.294" />

    <ProgressBar
        android:id="@+id/setprofileprogressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:outlineAmbientShadowColor="@color/purple"
        android:outlineSpotShadowColor="@color/purple"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/profilepanel"
        app:layout_constraintEnd_toEndOf="@+id/profilepanel"
        app:layout_constraintHorizontal_bias="0.71"
        app:layout_constraintStart_toStartOf="@+id/profilepanel"
        app:layout_constraintTop_toBottomOf="@+id/viewusername"
        app:layout_constraintVertical_bias="0.488" />
    <TextView
        android:id="@+id/editprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abeezee"
        android:text="Edit Profile"
        android:textColor="@color/purple"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/profilepanel"
        app:layout_constraintEnd_toEndOf="@+id/viewusername"
        app:layout_constraintHorizontal_bias="0.278"
        app:layout_constraintStart_toStartOf="@+id/viewusername"
        app:layout_constraintTop_toBottomOf="@+id/viewusername" />
    <ImageView
        android:id="@+id/userimage"
        android:layout_width="81dp"
        android:layout_height="69dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewusername"
        app:layout_constraintEnd_toStartOf="@+id/viewusername"
        app:layout_constraintStart_toStartOf="@+id/profilepanel"
        app:layout_constraintTop_toTopOf="@+id/viewusername"
        app:srcCompat="@drawable/defaultprfilepic" />


</androidx.constraintlayout.widget.ConstraintLayout>