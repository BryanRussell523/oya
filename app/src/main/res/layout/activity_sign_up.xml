<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="158dp"
        android:layout_height="117dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="118dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="135dp"
        android:background="@drawable/signupbackpic"
        app:srcCompat="@drawable/signuplogo"
        app:tint="@color/white" />
    <TextView
        android:layout_below="@+id/imageView4"
        android:id="@+id/textView3"
        android:layout_centerInParent="true"
        android:layout_width="219dp"
        android:layout_height="55dp"
        android:background="@drawable/signinbuttonback"
        android:fontFamily="@font/abeezee"
        android:padding="15dp"
        android:text="Oya let's signup!!!"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="21dp" />

    <RelativeLayout
        android:id="@+id/signuppanel"
        android:layout_width="320dp"
        android:layout_height="450dp"
        android:layout_below="@+id/imageView4"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/loginpanel"
        android:elevation="50dp">

        <EditText
            android:id="@+id/username"
            android:layout_width="288dp"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/passwordtextboxbackground"
            android:drawableStart="@drawable/usernameicon"
            android:elevation="10dp"
            android:ems="10"
            android:hint="Username"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="288dp"
            android:layout_height="47dp"
            android:layout_below="@+id/username"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="135dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/passwordtextboxbackground"
            android:drawableStart="@drawable/emailicon"
            android:elevation="10dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="210dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/passwordtextboxbackground"
            android:drawableStart="@drawable/passwordicon"
            android:elevation="10dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/registerbutton"
            android:layout_width="134dp"
            android:layout_height="50dp"
            android:layout_below="@+id/password"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/signupbackpic"
            android:fontFamily="@font/abeezee"
            android:text="Register"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registerbutton"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/abeezee"
            android:text="Already Have an account?"
            android:textColor="@color/black"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registerbutton"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/textView"
            android:fontFamily="@font/abeezee"
            android:text="Login"
            android:textColor="@color/purple"
            android:textSize="19dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signuppanel"
        android:layout_centerInParent="true"
        android:fontFamily="@font/abeezee"
        android:text="Oyaonline"
        android:layout_marginTop="6dp"
        android:textColor="@color/lightblue"
        android:textSize="20sp" />
</RelativeLayout>