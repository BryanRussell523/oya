<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/grey">
    <RelativeLayout
        android:elevation="10dp"
        android:id="@+id/profilelayout"
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:paddingLeft="50dp"
        android:paddingRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/profilepanel">
        <androidx.cardview.widget.CardView
            android:id="@+id/viewuserimage"
            android:layout_width="65dp"
            android:layout_height="65dp"
            app:cardCornerRadius="65dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/defaultprfilepic"
                tools:layout_editor_absoluteX="138dp"
                tools:layout_editor_absoluteY="229dp" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginTop="25dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/abeezee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:textColor="@color/black"
            android:text="Username"
            android:layout_marginStart="75dp"/>
        <RelativeLayout
            android:id="@+id/relativelayout1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/lightblue"
            android:background="@color/lightblue"
            android:layout_below="@id/viewuserimage"
            android:layout_marginTop="5dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:backgroundTint="@color/white"
            android:id="@+id/avatar"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativelayout1"
            android:layout_marginTop="1dp"
            android:drawableStart="@drawable/avatar"
            android:drawableEnd="@drawable/arrowforward"
            android:layout_marginBottom="5dp"
            android:text="Avatar"
            android:elevation="10dp"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/abeezee"
           android:textAlignment="textStart" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/profilelayout"
        android:elevation="10dp"
        android:id="@+id/accountlayout"
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:paddingLeft="50dp"
        android:paddingRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/profilepanel">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"
            android:id="@+id/account"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/account"
            android:drawableEnd="@drawable/arrowforward"
            android:layout_marginBottom="5dp"
            android:text="Account"
            android:elevation="10dp"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/abeezee"
            android:textAlignment="textStart" />
        <RelativeLayout
            android:id="@+id/relativelayout2"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/lightblue"
            android:background="@color/lightblue"
            android:layout_below="@id/account"
            android:layout_marginTop="8dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:backgroundTint="@color/white"
            android:id="@+id/invite"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativelayout2"
            android:layout_marginTop="5dp"
            android:drawableStart="@drawable/invite"
            android:drawableEnd="@drawable/arrowforward"
            android:layout_marginBottom="10dp"
            android:text="Invite a friend"
            android:elevation="10dp"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/abeezee"
            android:textAlignment="textStart" />
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_centerHorizontal="true"
        android:background="@drawable/profilepanel"
        android:id="@+id/logout"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_below="@+id/accountlayout"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/logout"
        android:text="Logout"
        android:textColor="@color/red"
        android:elevation="10dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/abeezee"
        android:textAlignment="textStart" />
    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/abeezee"
        android:text="OyaOnline"
        android:textColor="@color/lightblue"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>

