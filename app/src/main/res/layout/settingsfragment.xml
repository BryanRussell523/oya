<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/relativelayout1"
        android:background="@drawable/authbackground"
        android:layout_width="match_parent"
        android:layout_height="215dp">
        <ImageView
            android:id="@+id/editProfile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/editprofile"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:elevation="25dp"
            android:layout_width="100dp"
            android:layout_marginTop="35dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="130dp">
        <ImageView
            android:id="@+id/userImage"
            android:elevation="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/defaultprofilepic" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/userName"
            android:textSize="20sp"
            android:textStyle="bold"
           android:fontFamily="@font/nunito"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="Name of user"/>
        <TextView
            android:id="@+id/phone"
            android:textSize="19sp"
            android:textColor="@color/white"
           android:fontFamily="@font/nunito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userName"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:text="Phone number of user"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/descriptionLayout"
        android:layout_below="@+id/relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/skyblue">
        <TextView
            android:id="@+id/des"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="User Description"
           android:fontFamily="@font/nunito"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/chatSettings"
        android:layout_below="@id/descriptionLayout"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/chatSettingsicon"
            android:layout_width="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/chatsettings"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:fontFamily="@font/nunito"
            android:textColor="@color/black"
            android:text="Chat"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/chatSettingsicon"/>
        <ImageView
            android:layout_marginRight="10dp"
            app:tint="@color/black"
            android:src="@drawable/open"
            android:layout_marginTop="15dp"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/privacySettings"
        android:layout_below="@+id/chatSettings"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/privacySettingsicon"
            android:layout_width="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/privacy"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:fontFamily="@font/nunito"
            android:textColor="@color/black"
            android:text="Privacy &amp; Security"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/privacySettingsicon"/>
        <ImageView
            android:layout_marginRight="10dp"
            app:tint="@color/black"
            android:src="@drawable/open"
            android:layout_marginTop="15dp"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/languageSettings"
        android:layout_below="@+id/privacySettings"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/languageSettingsicon"
            android:layout_width="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/language"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:fontFamily="@font/nunito"
            android:textColor="@color/black"
            android:text="Language"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/languageSettingsicon"/>
        <ImageView
            android:layout_marginRight="10dp"
            app:tint="@color/black"
            android:src="@drawable/open"
            android:layout_marginTop="15dp"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/invite"
        android:layout_below="@+id/languageSettings"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/inviteIcon"
            android:layout_width="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/invite"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:fontFamily="@font/nunito"
            android:textColor="@color/black"
            android:text="Invite a friend"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/inviteIcon"/>
        <ImageView
            android:layout_marginRight="10dp"
            app:tint="@color/black"
            android:src="@drawable/open"
            android:layout_marginTop="15dp"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/notificationSettings"
        android:layout_below="@+id/invite"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/notificationSettingsIcon"
            android:layout_width="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/notification"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:fontFamily="@font/nunito"
            android:textColor="@color/black"
            android:text="Turn on notifications"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/notificationSettingsIcon"/>
        <Switch
            android:id="@+id/notificationSwitch"
            android:layout_marginRight="10dp"
            android:textColor="@color/blue"
            android:src="@drawable/open"
            android:layout_marginTop="15dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/help"
        android:layout_below="@+id/notificationSettings"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/helpIcon"
            android:layout_width="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/help"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:fontFamily="@font/nunito"
            android:textColor="@color/black"
            android:text="Help"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/helpIcon"/>
        <ImageView
            android:layout_marginRight="10dp"
            app:tint="@color/black"
            android:src="@drawable/open"
            android:layout_marginTop="15dp"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/logout"
        android:layout_below="@+id/help"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/logoutIcon"
            android:layout_width="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logout"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:fontFamily="@font/nunito"
            android:textColor="@color/black"
            android:text="Logout"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/logoutIcon"/>
        <ImageView
            android:layout_marginRight="10dp"
            app:tint="@color/black"
            android:src="@drawable/open"
            android:layout_marginTop="15dp"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</RelativeLayout>

