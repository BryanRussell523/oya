<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/note_pad_menu_background"
    android:elevation="50dp"
    android:padding="16dp">
    <TextView
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="@font/nunito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick a color"/>
<LinearLayout
    android:layout_marginTop="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/purple"
        android:layout_margin="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/purple_color"/>
    <ImageView
        android:id="@+id/pink"
        android:layout_margin="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/pink_color"/>
    <ImageView
        android:id="@+id/lavender"
        android:layout_margin="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/lavender_color"/>
    <ImageView
        android:id="@+id/green"
        android:layout_margin="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/green_color"/>
    <ImageView
        android:id="@+id/lemon"
        android:layout_margin="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/lemon_color"/>
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/yellow"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/yellow_color"/>
        <ImageView
            android:id="@+id/orange"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/orange_color"/>
        <ImageView
            android:id="@+id/teal"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/teal_color"/>
        <ImageView
            android:id="@+id/grey"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/grey_color"/>
        <ImageView
            android:elevation="15dp"
            android:id="@+id/white"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/white_color"/>
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="17sp"
            android:fontFamily="@font/nunito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lock Note"/>
        <Switch
            android:id="@+id/lockNote"
            android:layout_marginLeft="70dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/share"
            android:src="@drawable/sharenote"
            android:layout_width="30dp"
            android:layout_height="35dp"/>
        <TextView
            android:layout_marginTop="3dp"
            android:textSize="17sp"
            android:layout_marginLeft="5dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/nunito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"/>

</LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/delete"
            android:src="@drawable/delete"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <TextView
            android:layout_marginTop="3dp"
            android:textSize="17sp"
            android:layout_marginLeft="5dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/nunito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"/>
    </LinearLayout>
</LinearLayout>