<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/relativelayout1"
        android:background="@drawable/authbackground"
        android:layout_width="match_parent"
        android:layout_height="255dp">
        <ImageView
            android:id="@+id/close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/closeprofile"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:elevation="25dp"
            android:layout_width="100dp"
            android:layout_marginTop="35dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="130dp">
            <ImageView
                android:id="@+id/userImage"
                android:elevation="25dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/defaultprofilepic" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:visibility="gone"
            android:id="@+id/name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="Name of user"/>
        <TextView
            android:id="@+id/UserName"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="User Name"/>
        <TextView
            android:id="@+id/Userphone"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/UserName"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:text="phone number of user"/>
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:layout_below="@+id/Userphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/videoCall"
                android:src="@drawable/videocall"
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/call"
                android:layout_toRightOf="@id/videoCall"
                android:src="@drawable/call"
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/search"
                android:layout_toRightOf="@+id/call"
                android:src="@drawable/search"
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/descriptionLayout"
        android:layout_below="@+id/relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/skyblue">
        <TextView
            android:id="@+id/des"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="User Description"
            android:fontFamily="@font/nunito"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mediaContaner"
        android:layout_below="@id/descriptionLayout"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Media"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:fontFamily="@font/nunito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Media, Docs, Links"/>
        <TextView
            android:id="@+id/viewAllMedia"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:fontFamily="@font/nunito"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View All -->"/>
       <LinearLayout
           android:layout_below="@+id/Media"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="50dp">
           <ImageView
               android:layout_margin="10dp"
               android:layout_width="90dp"
               android:layout_height="40dp"
               android:src="@drawable/googleg_standard_color_18" />
           <ImageView
               android:layout_margin="10dp"
               android:layout_width="90dp"
               android:layout_height="40dp"
               android:src="@drawable/googleg_standard_color_18" />
           <ImageView
               android:layout_margin="10dp"
               android:layout_width="90dp"
               android:layout_height="40dp"
               android:src="@drawable/googleg_standard_color_18" />
           <ImageView
               android:layout_margin="10dp"
               android:layout_width="90dp"
               android:layout_height="40dp"
               android:src="@drawable/googleg_standard_color_18" />
       </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/editContact"
        android:layout_below="@id/mediaContaner"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/editContactIcon"
            android:layout_width="35dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/edit"/>
        <TextView
            android:layout_alignTop="@+id/editContactIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:textColor="@color/black"
            android:text="Edit Contact"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/editContactIcon"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/changeWallpaper"
        android:layout_below="@+id/editContact"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/changeWallpaperIcon"
            android:layout_width="35dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/changewallpaper"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:textColor="@color/black"
            android:text="Change Wallpaper"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/changeWallpaperIcon"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/deleteChat"
        android:layout_below="@+id/changeWallpaper"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/deleteChatIcon"
            android:layout_width="35dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/delete"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:textColor="@color/black"
            android:text="Delete Chat"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/deleteChatIcon"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/blockContact"
        android:layout_below="@+id/deleteChat"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/deleteContactIcon"
            android:layout_width="35dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/blockcontact"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:textColor="@color/black"
            android:text="Block Contact"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/deleteContactIcon"/>
    </RelativeLayout>
</RelativeLayout>

