<?xml version="1.0" encoding="utf-8"?>
<!--THIS LAYOUT IS CREATED TO ACCEPT AND DISPLAY RECEIVER MESSAGE.
THIS LAYOUT WILL BE CALLED IN THE MAIN CODE TO DISPLAY ON USER TO USER CHAT-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="2dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewofusertouserchat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="35dp">
        <ImageView
            android:id="@+id/usertouserchatimageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/defaultprfilepic"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="229dp" />
    </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/show_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reciever Message Displays here"
            android:textSize="18sp"
            android:textColor="@color/lightblue"
            android:layout_toRightOf="@+id/cardviewofusertouserchat"
            android:layout_marginLeft="5dp"
            android:padding="8dp"
            android:background="@drawable/recieverchatbubble"
             />
</RelativeLayout>