<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotePad">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_marginTop="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/back"
                android:layout_marginTop="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/back"
                app:tint="@color/black"/>
            <TextView
                android:text="Share note?"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/shareNote"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/sharenote"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="25dp"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/NoteTitle"
        android:padding="10dp"
        android:background="@drawable/notepad_title_background"
        android:layout_width="390dp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/grey"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="@font/nunito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/NoteContent"
        android:background="@drawable/notepad_content_background"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/NoteTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:textColorHint="@color/grey"
        android:textSize="20sp"
        android:padding="10dp"
        android:fontFamily="@font/nunito"/>
    <ImageView
        android:id="@+id/selectedImage"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:background="@drawable/flag_transparent"
        android:layout_marginTop="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NoteContent" />
</androidx.constraintlayout.widget.ConstraintLayout>