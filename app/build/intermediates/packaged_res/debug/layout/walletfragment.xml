<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:layout_marginLeft="15dp"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="Wallet"
    android:fontFamily="@font/abeezee"
    android:textColor="@color/purple"
    android:textSize="25dp"
    android:textStyle="bold"
    app:layout_constraintVertical_bias="0.009"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/Relative"
        android:layout_width="380dp"
        android:layout_height="180dp"
        android:background="@drawable/mainwallet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="134dp"
            android:fontFamily="@font/abeezee"
            android:text="Main Wallet"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="153dp"
            android:layout_height="28dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="204dp"
            android:layout_marginBottom="91dp"
            android:text="â‚¦ 0.00"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/cardnumber"
            android:layout_width="228dp"
            android:layout_height="30dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="82dp"
            android:layout_marginEnd="127dp"
            android:layout_marginBottom="16dp"
            android:text="4444 555 XXXX 243"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="268dp"
        android:fontFamily="@font/abeezee"
        android:text="Actions"
        android:textColor="@color/lightblue"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/sendmoney"
        android:layout_width="157dp"
        android:layout_height="100dp"
        android:layout_marginTop="328dp"
        android:background="@drawable/sendmoneybackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="140dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="1dp"
            android:fontFamily="@font/abeezee"
            android:text="Send money"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="75dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="86dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/sendmoney" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/paybills"
        android:layout_width="157dp"
        android:layout_height="100dp"
        android:layout_marginTop="456dp"
        android:background="@drawable/paybillsbackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102">

        <TextView
            android:id="@+id/bills"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="26dp"
            android:fontFamily="@font/abeezee"
            android:text="Pay bills"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/billsicon"
            android:layout_width="75dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="86dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/bills" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/history"
        android:layout_width="157dp"
        android:layout_height="100dp"
        android:layout_marginTop="456dp"
        android:background="@drawable/historybackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102">

        <TextView
            android:id="@+id/texthistory"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="26dp"
            android:fontFamily="@font/abeezee"
            android:text="History"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/historyicon"
            android:layout_width="75dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="86dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/history" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buyairtime"
        android:layout_width="157dp"
        android:layout_height="100dp"
        android:layout_marginTop="328dp"
        android:background="@drawable/buyairtime"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
        <TextView
            android:id="@+id/airtime"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="26dp"
            android:fontFamily="@font/abeezee"
            android:text="Buy airtime"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/airtimeicon"
            android:layout_width="75dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="86dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/airtime" />
    </RelativeLayout>
    <ImageButton
        android:id="@+id/fab"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/floatingactionbuttonbackground"
        android:elevation="10dp"
        android:src="@drawable/newchat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.949" />
</androidx.constraintlayout.widget.ConstraintLayout>