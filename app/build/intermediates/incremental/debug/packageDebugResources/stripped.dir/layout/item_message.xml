    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/message"
    tools:text="@tools:sample/full_names"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/lorem"
        android:id="@+id/sender"/>
</LinearLayout>